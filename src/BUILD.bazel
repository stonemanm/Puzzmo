    hdrs = ["bongo.h"],
    deps = [
        "@abseil-cpp//absl/container:flat_hash_set",
    ],
)

cc_library(
    name = "point",
    srcs = ["point.cc"],
    hdrs = ["point.h"],
)

cc_library(
    name = "dictionary_utils",
    srcs = ["dictionary_utils.cc"],
    hdrs = ["dictionary_utils.h"],
    data = [
        "//data:dictionary.txt",
    ],
    deps = [
        "@abseil-cpp//absl/log",
    ],
)

cc_library(
    name = "spelltower_board",
    srcs = ["spelltower_board.cc"],
    hdrs = ["spelltower_board.h"],
